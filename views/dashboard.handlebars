<section>
    <h2>
        Create New Content
    </h2>

    <form class="new-content-form">
        <div>
            <label for="text-title">Title:</label>
            <input type="text" id="text-title" name="text-title" />
        </div>
    <div>
        <label for="content-body">Content</label>
        <input id="content-body" name="content-body" />
    </div>
    <div>
            <button type="submit" class="btn">Create Content</button>
    </div>
    
    </form>
</section>

{{#if text.length}}
<section>
    <h2>
        Your Content
    </h2>
    <ol>
        {{#each text as |text|}}
        <li>
            {{> text text}}
            <a href="/dashboard/edit/{{text.id}}" class="update">Update Content</a>
        </li>
        {{/each}}
    </ol>
    {{/if}}
</section>

<script src="/javascript/adding.js"></script>